<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/comm_selector_item"
              android:orientation="horizontal"
              android:padding="20dp">


    <TextView
        android:id="@+id/tv_inspect_item_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/comm_black"
        android:textSize="16sp"
        tools:text="111"/>

    <TextView
        android:id="@+id/tv_inspect_item_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:layout_weight="1"
        android:textColor="@color/comm_grey"
        android:textSize="16sp"
        tools:text="111"/>

    <ImageView
        android:id="@+id/ic_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/comm_right_arrow"/>

</LinearLayout>


