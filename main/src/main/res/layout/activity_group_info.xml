<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/comm_include_toolbar" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" />

        <include layout="@layout/layout_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#d9d9d9" />

        <include layout="@layout/layout_line" />

        <com.allen.library.SuperTextView
            android:id="@+id/stv_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:sLeftIconMarginLeft="10dp"
            app:sLeftTextColor="@color/comm_black"
            app:sLeftTextSize="14sp"
            app:sLeftTextString="我在群中昵称"
            app:sLeftViewMarginLeft="10dp"
            app:sRightIconRes="@mipmap/comm_right_arrow"
            app:sRightTextColor="@color/comm_black"
            app:sRightTextSize="@dimen/sp_14"
            app:sRightTextString="老张"
            app:sUseRipple="false" />

        <include layout="@layout/layout_line" />

        <com.allen.library.SuperTextView
            android:id="@+id/stv_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:sLeftIconMarginLeft="10dp"
            app:sLeftTextColor="@color/comm_black"
            app:sLeftTextSize="14sp"
            app:sLeftTextString="邀请用户进群"
            app:sLeftViewMarginLeft="10dp"
            android:background="@drawable/touch_smack_bg"
            app:sRightIconRes="@mipmap/comm_right_arrow"
            app:sUseRipple="false" />

        <include layout="@layout/layout_line" />

        <com.allen.library.SuperTextView
            android:id="@+id/stv_remove"
            android:background="@drawable/touch_smack_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:sLeftIconMarginLeft="10dp"
            app:sLeftTextColor="@color/comm_black"
            app:sLeftTextSize="14sp"
            app:sLeftTextString="删除群聊用户"
            app:sLeftViewMarginLeft="10dp"
            app:sRightIconRes="@mipmap/comm_right_arrow"
            app:sUseRipple="false" />

        <include layout="@layout/layout_line" />

        <com.allen.library.SuperButton
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="50dp"
            android:text="删除并退出"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:sCornersRadius="5dp"
            app:sSelectorDisableColor="@color/line"
            app:sSelectorNormalColor="#FF5E29"
            app:sSelectorPressedColor="@color/line"
            app:sUseSelector="true" />
    </LinearLayout>
</ScrollView>